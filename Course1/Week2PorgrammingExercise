// Split an image in 3 and do amp up red in the first 3rd, green in the second and blue in the third
//make sure to use getHieght() and getWidth() before hand to find out the size of the image.
var image = new SimpleImage("hilton.jpg");

var width = image.getHeight();//140

for( var pixel of image.values()){
    if(pixel.getX() < 47){
        pixel.setRed(255);
    }
    
    if(pixel.getX() < 102 && pixel.getX() > 46){
        pixel.setGreen(255);
    }
    if(pixel.getX() < 140 && pixel.getX() > 102){
        pixel.setBlue(255);
    }
}

print(image);


//Write a JavaScript function named swapRedGreen with one parameter pixel (representing a single pixel). 
//This function should swap the red and green values of the pixel. For example, if you have a pixel with
//red = 255, green = 100, blue = 150, after calling swapRedGreen on that pixel its new RGB values would
//be red = 100, green = 255, blue = 150. 
var image = new SimpleImage("duke_blue_devil.png");

print(image);

print(swapRedGreen(image));

function swapRedGreen(image){
    for( var pixel of image.values()){
        var red = pixel.getRed();
        var green = pixel.getGreen();
        pixel.setRed(green);
        pixel.setGreen(red);
        }
        
    return image;
}




//Write code to change the Duke blue devil (the image below on the left) to be yellow (as in the image below on the right). 
var image = new SimpleImage("duke_blue_devil.png");

print(image);

print(reduceBlueAddYellow(image));

function reduceBlueAddYellow(image){  
    for( var pixel of image.values()){
        if(pixel.getBlue() > pixel.getRed() ){
            pixel.setBlue(0);
            pixel.setRed(255);
            pixel.setGreen(255);
        }
    }
    return image;
}

print(image);
